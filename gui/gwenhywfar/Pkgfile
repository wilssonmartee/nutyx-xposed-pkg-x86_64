description="OS abstraction functions for various projects"
url="https://www.aquamaniac.de/"

packager="spiky <spiky@nutyx.org>"
contributors=""

makedepends=(gnutls libgcrypt openssl gtk3)

name=gwenhywfar
version=5.8.2

source=(https://www.aquamaniac.de/rdm/attachments/download/411/$name-$version.tar.gz)

build() {
cd $name-$version 
./configure --prefix=/usr \
--sysconfdir=/etc \
--enable-system-certs \
--with-guis="gtk3"
make
make DESTDIR=$PKG install
}
