description="User level public file sharing via WebDAV for MATE"
url="https://mate-desktop.org/"

packager="tnut <tnut@nutyx.org>"
contributors="Fanch, Jayce, Greg"

makedepends=(dbus-glib apache bluez caja dconf
	     gdk-pixbuf gtk3 libnotify
             libcanberra libunique1 mod-dnssd)

set=(mate)

name=mate-user-share
version=1.26.0

source=(https://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {

  cd $name-$version
  ./configure   \
          --prefix=/usr \
          --libexec=/usr/lib/${name} \
          --sysconfdir=/etc \
          --disable-bluetooth
          
  make
  make DESTDIR=$PKG install

  # Obsolet lib
  rm $PKG/usr/lib/caja/extensions-2.0/libcaja-user-share.la
  
}

uptodate() {
feed=https://github.com/mate-desktop/$name/releases.atom
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
$exec $feed | grep release | grep title | head -1 | \
sed -e "s@ @@g" -e "s@<title>$name@@" -e "s@release</title>@@"
}
