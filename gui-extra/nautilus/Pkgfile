description="GNOME file manager"
url="http://live.gnome.org/Nautilus"

packager="fabienwang <fabienwang@nutyx.org>"
contributors="Fanch, jayce, Remy, tnut, spiky"

run=(desktop-file-utils gtk-update-icon-cache tracker-miners
     shared-mime-info libportal)
makedepends=(gnome-autoar libnotify gnome-desktop tracker
             gobject-introspection exempi libexif libgexiv2
             gvfs meson gtk-doc libhandy)
set=(gnome)

name=nautilus
version=40.2


source=(https://download.gnome.org/sources/$name/40/$name-$version.tar.xz)

build() {
  cd $name-$version
  mkdir -p build
  cd build
  meson --prefix=/usr  \
    --sysconfdir=/etc \
    -Dpackagekit=false \
    -Dselinux=false ..
  ninja
  DESTDIR=$PKG ninja install
}
